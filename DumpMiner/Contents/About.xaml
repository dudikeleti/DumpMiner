<UserControl x:Class="DumpMiner.Contents.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="650">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Left" MaxWidth="600" Margin="20">
                <!-- Header -->
                <TextBlock Text="ABOUT DUMPMINER"
                           Style="{StaticResource Heading2}" 
                           Margin="0,0,0,10"/>
                <GridSplitter BorderThickness="1" Height="1" Margin="0,0,0,20"/>
                
                <!-- Version Information -->
                <TextBlock Text="{Binding VersionInfo}"
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource ItemText}"
                           Margin="0,0,0,15"/>
                
                <!-- Main Description -->
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20"
                           Text="DumpMiner is a powerful tool for inspecting .NET memory dumps and live processes. Built on Microsoft's ClrMD library, it provides advanced capabilities for automated crash analysis and memory debugging, enhanced with AI-powered insights." />
                
                <!-- Key Features Section -->
                <TextBlock Text="🚀 KEY FEATURES" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Margin="15,0,0,20">
                    <TextBlock Text="• AI-Powered Debugging - Integration with OpenAI GPT, Anthropic Claude, and Google Gemini" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Advanced Memory Analysis - Heap inspection, object analysis, and memory leak detection" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Stack Trace Analysis - CLR stack inspection with intelligent root cause analysis" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Source Code Decompilation - C# source code analysis with performance insights" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Assembly Analysis - JIT disassembly and IL code inspection" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Object Extraction - Extract and analyze objects including bitmaps and complex data structures" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Exception Analysis - Comprehensive exception tracking and analysis" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Modern UI - Clean, responsive interface with customizable themes" 
                               TextWrapping="Wrap" Margin="0,2"/>
                </StackPanel>
                
                <!-- Debugging Operations Section -->
                <TextBlock Text="🔍 DEBUGGING OPERATIONS" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <Grid Margin="15,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Memory Analysis:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="• Heap inspection and statistics" Margin="0,2"/>
                        <TextBlock Text="• Large object heap analysis" Margin="0,2"/>
                        <TextBlock Text="• Memory segments and regions" Margin="0,2"/>
                        <TextBlock Text="• GC handles and finalizer queue" Margin="0,2"/>
                        <TextBlock Text="• Object root analysis" Margin="0,2"/>
                        
                        <TextBlock Text="Code Analysis:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                        <TextBlock Text="• Method disassembly" Margin="0,2"/>
                        <TextBlock Text="• Source code decompilation" Margin="0,2"/>
                        <TextBlock Text="• Type information inspection" Margin="0,2"/>
                        <TextBlock Text="• Module and assembly analysis" Margin="0,2"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Runtime Analysis:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="• CLR stack traces" Margin="0,2"/>
                        <TextBlock Text="• Exception analysis" Margin="0,2"/>
                        <TextBlock Text="• Thread and sync block analysis" Margin="0,2"/>
                        <TextBlock Text="• Delegate method inspection" Margin="0,2"/>
                        <TextBlock Text="• Array and collection analysis" Margin="0,2"/>
                        
                        <TextBlock Text="And more:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                        <TextBlock Text="• Object size calculation" Margin="0,2"/>
                        <TextBlock Text="• Type handle resolution" Margin="0,2"/>
                        <TextBlock Text="• Process information" Margin="0,2"/>
                        <TextBlock Text="• Cross-platform dump support" Margin="0,2"/>
                    </StackPanel>
                </Grid>
                
                <!-- AI Integration Section -->
                <TextBlock Text="🤖 AI INTEGRATION" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Margin="15,0,0,20">
                    <TextBlock Text="• OpenAI GPT" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Anthropic Claude" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Google Gemini" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Automated Investigation - AI automatically calls related operations for comprehensive analysis" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Intelligent Caching - Reduces API costs and improves response times" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Context-Aware Prompts - Specialized prompts for different types of analysis" 
                               TextWrapping="Wrap" Margin="0,2"/>
                </StackPanel>
                
                <!-- Technical Details Section -->
                <TextBlock Text="⚙️ TECHNICAL DETAILS" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Margin="15,0,0,20">
                    <TextBlock Text="• Built with .NET 8.0 and WPF for modern Windows applications" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Microsoft ClrMD - Core dump analysis engine" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• ICSharpCode Decompiler - Source code reconstruction" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• AvalonEdit - Advanced code editor with syntax highlighting" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• ModernUI.WPF - Contemporary user interface framework" 
                               TextWrapping="Wrap" Margin="0,2"/>
                    <TextBlock Text="• Microsoft Semantic Kernel - AI orchestration and integration" 
                               TextWrapping="Wrap" Margin="0,2"/>
                </StackPanel>
                
                <!-- Libraries and Credits -->
                <TextBlock Text="📚 LIBRARIES and CREDITS" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Margin="15,0,0,20">
                    <TextBlock Margin="0,2">
                        <Hyperlink NavigateUri="https://github.com/microsoft/clrmd">
                            <Run Text="Microsoft ClrMD"/>
                        </Hyperlink>
                        <Run Text=" - .NET dump analysis framework"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Hyperlink NavigateUri="https://github.com/firstfloorsoftware/mui">
                            <Run Text="ModernUI for WPF"/>
                        </Hyperlink>
                        <Run Text=" - Modern user interface components"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Hyperlink NavigateUri="https://github.com/icsharpcode/AvalonEdit">
                            <Run Text="AvalonEdit"/>
                        </Hyperlink>
                        <Run Text=" - Advanced text editor control"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Hyperlink NavigateUri="https://github.com/icsharpcode/ILSpy">
                            <Run Text="ICSharpCode Decompiler"/>
                        </Hyperlink>
                        <Run Text=" - .NET decompilation engine"/>
                    </TextBlock>
                    <TextBlock Text="Thanks to @gsuberland for the object extraction functionality" 
                               FontStyle="Italic" Margin="0,10,0,2"/>
                </StackPanel>
                
                <!-- Footer -->
                <GridSplitter BorderThickness="1" Height="1" Margin="0,20,0,10"/>
                <TextBlock Text="DumpMiner - Advanced .NET Memory Analysis Tool" 
                           HorizontalAlignment="Center"
                           FontStyle="Italic"
                           Foreground="{DynamicResource ItemTextDisabled}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
