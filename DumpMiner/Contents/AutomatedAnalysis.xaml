<UserControl x:Class="DumpMiner.Contents.AutomatedAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DumpMiner.Infrastructure.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <controls:OperationView Header="Automated Analysis" 
                            Explanation="Comprehensive automated analysis with intelligent issue detection and root cause identification"
                            ObjectAddressVisibility="Collapsed"
                            ObjectTypeVisibility="Collapsed">
        <controls:OperationView.ItemsTemplate>
            <DataTemplate>
                <Border BorderBrush="SteelBlue"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,5,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Analysis Category and Priority -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{Binding AnalysisCategory, StringFormat=Category: {0}}"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="SteelBlue"/>
                                                         <TextBlock Text="{Binding Severity, StringFormat=Severity: {0}}"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        Margin="20,0,0,0"
                                        Foreground="Red"/>
                            <TextBlock Text="{Binding Priority, StringFormat=Priority: {0}}"
                                       FontSize="11"
                                       Margin="20,0,0,0"
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding Title}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        
                                                 <!-- Health Score (if available) -->
                         <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                             <TextBlock Text="Health Score: "
                                        FontWeight="Medium"/>
                             <TextBlock Text="{Binding Score, StringFormat={}{0:F1}/10.0}"
                                        FontWeight="Bold"
                                        Foreground="Green"/>
                         </StackPanel>
                        
                        <!-- Description -->
                        <ScrollViewer Grid.Row="3" MaxHeight="150" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
                            <TextBlock Text="{Binding Description}"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                        </ScrollViewer>
                        
                        <!-- Metadata -->
                        <Expander Grid.Row="4" Header="Technical Details" IsExpanded="False" Margin="0,0,0,8">
                            <StackPanel>
                                <ListView ItemsSource="{Binding Metadata}" MaxHeight="100">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Property" DisplayMemberBinding="{Binding Key}"/>
                                            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Recommendations -->
                        <Expander Grid.Row="5" Header="Recommendations" IsExpanded="True">
                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                            <TextBlock Text="â€¢ " FontWeight="Bold" Foreground="Green"/>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </Grid>
                </Border>
            </DataTemplate>
        </controls:OperationView.ItemsTemplate>
    </controls:OperationView>
</UserControl> 